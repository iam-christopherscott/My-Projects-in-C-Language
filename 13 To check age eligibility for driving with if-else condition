// To check age eligibility for driving with if-else condition with user input.
{
    int a;
    printf("Enter your age to check if you're eligible to drive on the road\n");
    scanf("%d", &a);
    if(a>18){
        printf("Congratulations! You are eligible to drive on the road.");
    }
    else{
        printf("Currently, you are not eligible to drive on the road! Please wait until you turn 18.");
    }
}
